## Use the R HOME indirection to support installations of multiple R version
PKG_LIBS = `$(R_HOME)/bin$(R_ARCH_BIN)/Rscript -e "Rcpp:::LdFlags()"`

.PHONY: all RNGwrapper

all: RNGwrapper

RNGwrapper:
	cd RNGwrapper; \
	$(R_HOME)/bin$(R_ARCH_BIN)/R CMD SHLIB $(PKG_LIBS) *.cpp -o ../RNGwrapper$(SHLIB_EXT); \
	rm *.o;
